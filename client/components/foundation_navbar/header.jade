                    li.dropdown
                        a(href='/foundation/contributors')
                            | Contributors
                            span.arrow-down
                        ul.dropdown-menu
                            li(ng-repeat='item in contributors')
                                    a(href='foundation/contributors#{{item.name}}') {{item.display}}

                    li.dropdown
                        a(href='/foundation/news')
                                | News & Events
                                span.arrow-down

                article.list-rows(ng-repeat='blog in blogs' ng-class='"list-row-" + ($index+2)')
                        header
                            /// span Forecasters' Blog
                            h2
                                a(href='#/blogs/{{blog.id}}/{{blog.slug}}') {{blog.getText('blog.title')}}
                        section.news-blog-event-body
                            /// img(alt='', src='assets/img/sub-blog-img.jpg')
                            p
                                {{blog.getText('blog.shortlede')}}
                        footer
                            /// section.blog-tags
                            ///    a(href='#') Tag One
                            ///    a(href='#') Tag Two
                            ///    a(href='#') Tag Three
                            p
                                time {{blog.getDate('blog.date')| dateUtc:"dddd MMMM Do" }}
                                i.fa.fa-circle
                                time {{blog.getText('blog.category')}}
                                i.fa.fa-circle
                                a(href='#/blogs/{{blog.id}}/{{blog.slug}}') Full article

            #mobile-sidebar-container.col-xs-12.col-md-3

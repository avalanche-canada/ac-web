.full-height.page
    #news-blog-event-content.container
        #top-link.visible-xs-block
            i.fa.fa-chevron-up
            br
            | Top
        .row
            header.col-xs-12
                #header-inner
                    h1
                        | Blogs
                    #sponsor-desktop.hidden-xs
                        p Brought to you by
                        a(target='_blank', href='http://www.tecterra.com/')
                            img(src='http://res.cloudinary.com/avalanche-ca/image/upload/c_scale,w_229/v1416955453/logos/Logos%20png/tecterra.png')
                    .blue-border
            #sponsor-mobile.col-xs-12.visible-xs-block
                #sponsor-mobile-inner
                    p.pull-left
                        | Brought
                        br
                        | to you by
                    a.pull-right(target='_blank', href='http://www.tecterra.com/')
                        img(src='http://res.cloudinary.com/avalanche-ca/image/upload/c_scale,w_229/v1416955453/logos/Logos%20png/tecterra.png')
            // /#sponsor-mobile
            .col-xs-12
                #sponsor-ad-container(ng-hide='true')
                    p#sponsor-text.hidden-xs Thanks To Our Title Sponsor
                    a#sponsor-link(title='Smith Optics', target='_blank', href='http://www.smithoptics.com/')
                        img.img-responsive(alt='Smith Optics', src='assets/img/sponsor-mobile-smith-logo.png')

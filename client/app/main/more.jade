.full-height.page#more.ac-view-more
    .scroll-nav.scroll-nav--up
        a(ng-click='showMap()')
            i.fa.fa-chevron-up.fa-inverse.fa-lg
            | Map

    .container
        .row
            .col-xs-12
                #sponsor-ad-container(ng-if='!sledPage')
                    a#sponsor-link(title='Smith Optics', target='_blank', href='http://www.smithoptics.com/')
                        img.img-responsive(alt='Smith Optics', src='{{env.imageDir}}/sponsor-mobile-smith-logo.png')
                #sponsor-ad-container(ng-if='sledPage')
                    a#sponsor-link(title='Smith Optics', target='_blank', href='http://www.smithoptics.com/')
                        img.img-responsive(alt='Smith Optics', src='{{env.imageDir}}/marmot-gloves.jpg')
    #know-more
        .container
            .row
                article.col-xs-12
                    header
                        h2
                            | Know More.
                            br
                            span Go Farther.
                    footer
                        a.btn(href='http://membership.avalanche.ca/' target="_blank")
                            | Become a member
                            i.fa.fa-angle-right
                        a.btn(href='/training/overview')
                            | Take a course
                            i.fa.fa-angle-right
                        a.btn(href='/gear')
                            | Get the gear
                            i.fa.fa-angle-right
    #news.container
        .row
            .col-xs-12
                article#news-articles
                    header
                        h1
                            | News
                        .blue-border
                    article.list-row-1
                        section.news-image
                            img.im(alt='', src=" {{ featuredNews.getImageView('news.featured_image', 'preview').url }} ")

                            /// \todo
                            ///ul.news-social
                            ///    li
                            ///        a(href='#')
                            ///            i.fa.fa-facebook
                            ///            | 25
                            ///    li
                            ///        a(href='#')
                            ///            i.fa.fa-twitter
                            ///            | 12
                            ///    li
                            ///        a(href='#')
                            ///            i.fa.fa-eye
                            ///            | 63
                        header
                            span Featured
                            h2
                                a(href='#/news/{{featuredNews.id}}/{{featuredNews.slug}}')
                                    {{featuredNews.getText('news.title')}}
                        section.news-body
                            p
                                | {{featuredNews.getStructuredText('news.shortlede').asText(ctx)}}
                        footer
                            p
                                a(href='#/news/{{featuredNews.id}}/{{featuredNews.slug}}') Full article
                                i.fa.fa-circle
                                time(datetime='{{featuredNews.getDate("news.date")}}') {{featuredNews.getDate('news.date') | date:'EEEE MMMM d, y h:mm a'}}

                    article.list-rows(ng-repeat="item in news")
                        header
                            h2
                                a(href='#/news/{{item.id}}/{{item.slug}}')
                                    | {{item.getText('news.title')}}
                                    i.fa.fa-angle-right
                        footer
                            p
                                a(href='#/news/{{item.id}}/{{item.slug}}') Full article
                                i.fa.fa-circle
                                time {{item.getDate('news.date') | date:'EEEE MMMM d, y h:mm a' }}
                    article.list-rows
                        footer
                            p
                                a(href='#/news') See More

    #news.container
        .row
            .col-xs-12
                article#news-articles
                    header
                        h1
                            | Events
                        .blue-border
                    article.list-row-1
                        section.news-image
                            img.im(alt='', src=" {{ featuredEvent.getImageView('event.featured_image', 'preview').url }} ")
                            /// \To Do
                            ///ul.news-social
                            ///    li
                            ///        a(href='#')
                            ///            i.fa.fa-facebook
                            ///            | 25
                            ///    li
                            ///        a(href='#')
                            ///            i.fa.fa-twitter
                            ///            | 12
                            ///    li
                            ///        a(href='#')
                            ///            i.fa.fa-eye
                            ///            | 63
                        header
                            span Featured
                            h2
                                a(href='#/events/{{featuredEvent.id}}/{{featuredEvent.slug}}')
                                    {{featuredEvent.getText('event.title')}}
                        section.news-body
                            p
                                | {{featuredEvent.getStructuredText('event.shortlede').asText(ctx)}}
                        footer
                            p
                                a(href='#/events/{{featuredEvent.id}}/{{featuredEvent.slug}}') Full article
                                i.fa.fa-circle
                                {{featuredEvent .getDate('event.date') | date:'EEEE MMMM d, y h:mm a'}}

                    article.list-rows(ng-repeat="item in events")
                        header
                            h2
                                a(href='#/events/{{item.id}}/{{item.slug}}')
                                    | {{item.getText('event.title')}}
                                    i.fa.fa-angle-right
                        footer
                            p
                                a(href='#/events/{{item.id}}/{{item.slug}}') Full article
                                i.fa.fa-circle
                                time {{item.getDate('news.date') | date:'EEEE MMMM d, y h:mm a' }}
                    article.list-rows
                        footer
                            p
                                a(href='#/events') See More

    #videos.container
        .row
            .col-xs-12
                article#video-featured
                    header
                        #header-bg
                        h2.hidden-xs.hidden-sm
                            a(href='#') Throttle Decisions: Outreach Component
                    section#video-container

                       iframe(width='{{video.width}}', height='{{video.height}}', frameborder='0', allowfullscreen='', mozallowfullscreen='', webkitallowfullscreen='', src='//player.vimeo.com/video/79814896')
                       p
                          a(href='http://vimeo.com/79814896') Throttle Decisions: Outreach Component
                          | from
                          a(href='http://vimeo.com/avalanchecanada') Avalanche Canada
                          | on
                          a(href='https://vimeo.com') Vimeo
                          | .
                        #video-body
                            p
                                | Throttle Decisions is a fast-paced video series aimed at encouraging mountain sledders to become better trained in avalanche safety. Its eight short components move through the AST course.
                        #video-sponsor.hidden-xs
                            a#video-sponsor-link(title='Smith Optics', target='_blank', href='http://www.smithoptics.com/')
                                img.img-responsive(alt='Smith Optics', src='{{env.imageDir}}/sponsor-mobile-smith-logo.png')
    #blog.container
        .row
            .col-xs-12
                // blog articles container
                article#blog-articles
                    #blog-header-wrap
                        header
                            h2
                                | The
                                br.visible-xs-inline
                                | Avalanche
                                br
                                span Forecasters
                                br.visible-xs-inline
                                | Blog
                        section#blog-tagline-link
                            p We know Snow.
                            a#blog-link(href='#/blogs')
                                | Read The Blog
                                i.fa.fa-angle-right
                    // blog list rows
                    article.list-rows(ng-repeat='blog in blogs')
                        header
                            h3
                                a(href='#/blogs/{{blog.id}}/{{blog.slug}}') {{blog.getText('blog.title')}}
                        section.blog-author
                            p
                                ///todo | by
                                ///todo  a(href='#') Karl Klassen
                        section.blog-body
                            p
                               {{blog.getText('blog.shortlede')}}
                        footer
                            p
                                a(href='#/blogs/{{blog.id}}/{{blog.slug}}') Full article
                                i.fa.fa-circle
                                time {{blog.getDate('news.date') | date:'EEEE MMMM d, y h:mm a' }}
    .push
    div(ng-include='"components/footer/footer.html"')





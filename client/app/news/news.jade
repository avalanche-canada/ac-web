.full-height.page
    #news-blog-event-content.container
        #top-link.visible-xs-block
            i.fa.fa-chevron-up
            br
            | Top
        .row
            header.col-xs-12
                #header-inner
                    h1
                        | Recent
                        br.visible-xs-block
                        | News
                    #sponsor-desktop.hidden-xs
                        p Brought to you by
                        a(target='_blank', href='http://www.mammut.ch/en/index.html ')
                            img(src='http://res.cloudinary.com/avalanche-ca/image/upload/v1415214658/logos/MAMMUT_mobunc.svg')
                    .blue-border
            #sponsor-mobile.col-xs-12.visible-xs-block
                #sponsor-mobile-inner
                    p.pull-left
                        | Brought
                        br
                        | to you by
                    a.pull-right(target='_blank', href='http://localhost:9000/assets/images/arcteryx-logo.jpg')
            /// /#sponsor-mobile

            .col-xs-12
                #sponsor-ad-container(ng-hide='true')
                    p#sponsor-text.hidden-xs Thanks To Our Title Sponsor
                    a#sponsor-link(title='Smith Optics', target='_blank', href='http://www.smithoptics.com/')
                        img.img-responsive(alt='Smith Optics', src='assets/images/sponsor-mobile-smith-logo.png')
            #news-blog-event-list-rows.col-xs-12.col-md-9
                // news list rows
                article.list-rows.list-row-1
                    section.news-blog-event-image
                        img.img(alt='', src=" {{ featured.getImageView('news.featured_image', 'preview').url }} ")
                        ///ul.news-blog-event-social
                        ///    li
                        ///        a(href='#')
                        ///            i.fa.fa-facebook
                        ///            | 25
                        ///    li
                        ///        a(href='#')
                        ///            i.fa.fa-twitter
                        ///            | 12
                        ///    li
                        ///        a(href='#')
                        ///            i.fa.fa-eye
                        ///            | 63
                    header
                        span Featured
                        h2
                             a(href='#/news/{{featured.id}}/{{featured.slug}}')
                                    {{featured.getText('news.title')}}
                    section.news-blog-event-body
                        p
                            | {{featured.getStructuredText('news.shortlede').asText(ctx)}}
                    footer
                        p
                            a(href='#/news/{{featured.id}}/{{featured.slug}}') Read More
                                i.fa.fa-circle
                                time(datetime='{{featured.getDate("news.date")}}') {{featured.getDate('news.date') | dateUtc: 'YYYY-MM-DD'}}

                article.list-rows(ng-repeat=' document in news' ng-class='"list-row-" + ($index+2)')
                    header
                        h2
                            a(href='#/news/{{document.id}}/{{document.slug}}')
                                {{document.getText('news.title')}}
                    section.news-blog-event-body
                        p
                            | {{document.getStructuredText('news.shortlede').asText(ctx)}}
                    footer
                        p
                            a(href='#/news/{{document.id}}/{{document.slug}}') Read More
                            i.fa.fa-circle
                            time {{document.getDate('news.date') | date:'EEEE MMMM d, y h:mm a' }}
                // news-blog-event list rows ends
            // /#news-blog-event-list-rows
            #mobile-sidebar-container.col-xs-12.col-md-3
                aside
                    .dark-ribbon
                    .sidebar-inner
                        h3 Related
                        article.first.sidebar-related
                            h4
                                a(href='#') Spring Conditions Scenario Series
                            section.sidebar-related-author
                                | By
                                a(href='#') Karl Klassen
                            section.sidebar-related-pubdate Date 00, 0000
                        article.sidebar-related
                            h4
                                a(href='#') Avalanche Incident Description at Frisby Ridge, Revelstoke
                            section.sidebar-related-pubdate Date 00, 0000
                        article.last.sidebar-related
                            h4
                                a(href='#') Avalanche Incident Description at Frisby Ridge, Revelstoke
                            section.sidebar-related-pubdate Date 00, 0000
                        ul.sidebar-related-links
                            li.first
                                a(href='#') Related Data
                            li
                                a(href='#') Forecast Archive
                            li
                                a(href='#') Any Additional Links
                            li.last
                                h5 More Information
                                p
                                    | Mary Clayton
                                    br
                                    | Communications Director, Avalanche Canada
                                    br
                                    | mclayton@avalanche.ca
                                    br
                                    | 250.837.2141 (228)
                                    br
                                    | 250.837.1492
            // /#mobile-sidebar-container
    // /#news-blog-event-content
    .push
    div(ng-include='"components/footer/footer.html"')





